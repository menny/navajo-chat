<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Navajo.Text.Welcome.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_is_navajo_1_title_secure" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:contentDescription="@string/what_is_navajo_1_title_secure"
        android:src="@drawable/ic_welcome_slide_lock" />

    <TextView
        style="@style/Navajo.Text.Welcome.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_is_navajo_1_text_secure" />
</LinearLayout>

