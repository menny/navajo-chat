<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:drawable="@color/navajo_dark_white"
        android:gravity="fill" />

    <item
        android:width="180dp"
        android:height="180dp"
        android:gravity="center">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/navajo_white_accent" />
            <solid android:color="@color/navajo_white" />
        </shape>
    </item>

    <item
        android:width="120dp"
        android:height="120dp"
        android:drawable="@drawable/ic_navajo_splash_screen_icon"
        android:gravity="center" />
</layer-list>